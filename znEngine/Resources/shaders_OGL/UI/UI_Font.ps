#version 440
#extension GL_ARB_explicit_uniform_location : enable

// Input
in struct
{
	vec4 POSITION;
	vec2 TEXCOORD;
} VSInput;

// Uniforms
layout (std140, binding = 1) uniform Material 
{
    vec4 Color;
	vec2 Offset;
	vec2 Unused;
};

layout(location = 0) uniform sampler2D DiffuseTexture;

// Output
layout(location = 0) out vec4 color;

void main()
{
	color = vec4(Color.rgb, Color.a * texture(DiffuseTexture, VSInput.TEXCOORD).a);
};
